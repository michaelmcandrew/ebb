#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../../../autoload.php')) {
    // this file exists when installed globally
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$dotenv = new \Dotenv\Dotenv(__DIR__ .'/..');
$dotenv->load();
$dotenv->required([
    'CIVI_REST_API_BASE_URL',
    'INTERFACE_DIR'
]);

$log = $container->get('log');

$log->info('Initialize factory...');
$factory = $container->get('civicrm_schema_factory');

$log->info('Start generating boilerplate...');
$factory->generate();
$log->info('Finished generating boilerplate.');
