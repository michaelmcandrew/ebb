#!/usr/bin/env php
<?php
namespace Ebb;

require_once 'vendor/autoload.php';

$dotenv = new \Dotenv\Dotenv(__DIR__ .'/..');
$dotenv->load();
$dotenv->required([
    'CIVI_REST_API_BASE_URL',
    'INTERFACE_DIR'
]);

$container = new Container();
echo "Initialize factory...\n";
$factory = $container->get('angular_factory');
echo "Start generating boilerplate...\n";
$factory->generate();
echo "Finished generating boilerplate.\n";
